        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Revenue.RevenueComment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Revenue.RevenueQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Revenue.RevenueQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Revenue.RevenueRate)
        </dt>
        <dd class="col-sm-10">
