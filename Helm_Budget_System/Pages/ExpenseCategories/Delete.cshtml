@page
@model Helm_Budget_System.Pages.ExpenseCategories.DeleteModel

@{
    ViewData["Title"] = "Delete Expense Category";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Delete Expense Category</h2>

<h5>Are you sure you want to delete this Expense Category?</h5>

<p class="text-danger hiddenText">@Model.ErrorMessage</p>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpenseCategory.ExpenseCategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpenseCategory.ExpenseCategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpenseCategory.School.SchoolName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpenseCategory.School.SchoolName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ExpenseCategory.ID" />
        <div class="col-sm-12 text-right">
            <div class="form-group text-right col-sm-6">
                <input type="submit" value="Delete" class="btn btn-danger createBtn" />
            </div>
        </div>
        <a asp-page="Index"><i class="fa-solid fa-backward"></i>&nbsp;Back</a>
    </form>
</div>
