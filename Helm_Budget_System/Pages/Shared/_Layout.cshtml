<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Helm Budget System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="~/images/helm-logo-small.jpg" style="width:50px;" alt="Helm Budget System" class="navbar-btn" />
                <a class="navbar-brand" asp-area="" asp-page="/Index">&nbsp;<strong style="color:black;font-weight:800;font-size:18px;">Helm Budget System</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-12" style="margin-left:auto;">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index"><span class="fas fa-house" style="color:rgba(0, 0, 0, 0.55)"></span></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="fas fa-ellipsis"></span>
                            </a>
                            <ul class="dropdown-menu dropdownLinks">
                                <li><a class="dropdown-item" asp-page="/Expenses/Index">Expenses</a></li>
                                <li><a class="dropdown-item" asp-page="/Payrolls/Index">Payrolls</a></li>
                                <li><a class="dropdown-item" asp-page="/Revenues/Index">Revenues</a></li>
                                <li><a class="dropdown-item" asp-page="/Recruits/Index">Recruits</a></li>
                                <li><a class="dropdown-item" asp-page="/Ticketing/Index">Tickets</a></li>
                                <li><a class="dropdown-item" asp-page="/Travels/Index">Travels</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="fas fa-gear"></span>
                            </a>
                            <ul class="dropdown-menu dropdownLinks">
                                <li><a class="dropdown-item" asp-page="/BudgetSectors/Index">Budget Sectors</a></li>
                                <li><a class="dropdown-item" asp-page="/DescriptorDescriptions/Index">Descriptor Descriptions</a></li>
                                <li><a class="dropdown-item" asp-page="/ExpenseCategories/Index">Expense Categories</a></li>
                                <li><a class="dropdown-item" asp-page="/PayrollCategories/Index">Payroll Categories</a></li>
                                <li><a class="dropdown-item" asp-page="/RevenueCategories/Index">Revenue Categories</a></li>
                                <li><a class="dropdown-item"asp-page="/TransactionDescriptors/Index">Transaction Descriptors</a></li>
                                <li><a class="dropdown-item" asp-page="/TravelRateGroups/Index">Travel Rate Groups</a></li>
                                <li class="menuHr"><hr /></li>
                                <li><a class="dropdown-item" asp-page="/Schools/Index">Schools</a></li>
                                <li><a class="dropdown-item" asp-page="/UserRoles/Index">User Roles</a></li>
                                <li><a class="dropdown-item" href="~/Areas/Identity/Pages/Account/Manage/Index">Users</a></li>
                                <li><a class="dropdown-item" asp-page="/Years/Index">Years</a></li>
                            </ul>
                        </li>
                    </ul>
                     <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2022 - Helm Budget System - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>